---
import BaseLayout from './BaseLayout.astro';
import { Background } from '@components/background';
import { Navigation } from '@components/navigation';
---

<BaseLayout>
  <slot slot="head" name="head" />
  <Background client:load />

  <div frame-outer>
    <div frame-inner>
      <nav aria-label="Primary">
        <Navigation />
      </nav>

      <div content-outer>
        <slot name="title" />

        <main>
          <slot />
        </main>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  [frame-outer] {
    display: grid;
    align-items: center;
    justify-items: center;
    width: 100%;
    height: 100%;
    overflow: hidden;

    @media print {
      display: contents;
    }
  }

  [frame-inner] {
    display: grid;
    grid-template-rows: 1fr auto;
    gap: 0.75rem;
    width: calc(100% - 2rem);
    max-width: 1080px;
    height: calc(100% - 2rem);
    max-height: 860px;
    overflow: hidden;

    @media screen and (min-width: 640px) {
      grid-template-columns: auto 1fr;
    }

    @media print {
      display: contents;
    }
  }

  nav,
  [content-outer] {
    position: relative;

    box-shadow: inset max(-33vw, -356px) max(-33vw, -284px) max(66vw, 713px)
      rgb(from var(--base) r g b / 0.15);

    background-image: linear-gradient(
      -33deg,
      rgb(from var(--base) r g b / 0.15) 0%,
      rgb(from var(--base) r g b / 0.05) 33%,
      rgb(from var(--base) r g b / 0.15) 100%
    );

    background-color: rgb(from var(--base) r g b / 0.75);
  }

  nav {
    display: grid;
    grid-row: 2;
    border-radius: 0.25rem 0.25rem 1rem 1rem;
    height: 4rem;

    @media screen and (min-width: 640px) {
      grid-row: unset;
      border-radius: 1rem 0.25rem 0.25rem 1rem;
      width: 4rem;
      height: unset;
    }

    @media print {
      display: none;
    }
  }

  [content-outer] {
    display: grid;
    grid-template-rows: auto 1fr;
    grid-row: 1;
    border-radius: 1rem 1rem 0.25rem 0.25rem;
    overflow: hidden;

    @media screen and (min-width: 640px) {
      grid-row: unset;
      border-radius: 0.25rem 1rem 1rem 0.25rem;
    }

    @media print {
      display: contents;
    }
  }

  main {
    padding: 1rem;
    overflow: auto;
  }
</style>
