---
interface Props {
  parts: { [key: string]: string };
}

const { parts } = Astro.props;
---

<nav>
  <ul>
    {
      Object.entries(parts).map(([title, route]) => (
        <li>
          <a href={route}> {title} </a>
        </li>
      ))
    }
  </ul>
</nav>

<style>
  nav {
    margin: 0.5em;
    border-radius: 0.25em;
    background-color: var(--blue);
    padding: 0.25em 1em;

    @media print {
      display: none;
    }
  }

  ul {
    display: flex;
    margin: 0;
    padding: 0;
    font-weight: bold;
    list-style: none;
  }

  li {
    display: flex;
    align-items: center;
    gap: 0.25em;
    list-style: none;

    &:not(:last-child)::after {
      content: '/';
      color: var(--base);
    }
  }

  a {
    padding: 0.25em;
    color: var(--base);
    text-decoration: none;

    &:hover {
      text-decoration: underline;
    }
  }
</style>
