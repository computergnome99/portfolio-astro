---
import FrameLayout from '@layouts/FrameLayout.astro';
import { Title } from '@components/title';
import logo from '@assets/ascii/logo.txt?raw';
import logoMd from '@assets/ascii/logo-md.txt?raw';
import logoSm from '@assets/ascii/logo-sm.txt?raw';
import Data from '@assets/md/index.mdx';
---

<FrameLayout>
  <title slot="head">Calvin Bonner - Developer Portfolio</title>

  <Title slot="title" parts={{ '~': '/' }} />

  <pre id="logo">{ logo }</pre>
  <pre id="logo-md">{ logoMd }</pre>
  <pre id="logo-sm">{ logoSm }</pre>

  <Data />
</FrameLayout>

<style>
  #logo,
  #logo-md,
  #logo-sm {
    font-weight: bold;
  }

  #logo {
    display: none;
  }

  #logo-md {
    display: none;
  }

  #logo-sm {
    display: block;
  }

  @media screen and (min-width: 320px) {
    #logo {
      display: none;
    }

    #logo-md {
      display: block;
    }

    #logo-sm {
      display: none;
    }
  }

  @media screen and (min-width: 640px) {
    #logo {
      display: block;
    }

    #logo-md {
      display: none;
    }

    #logo-sm {
      display: none;
    }
  }
</style>
